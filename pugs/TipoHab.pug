doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Tipo de Habitacion
    body(style="background: rgb(184, 253, 219);")
        include bar.pug
        +bar()
        block content
        div(style="max-width: 1500px; margin: 0 auto; display: flex; justify-content: space-between; flex-direction: column; horizontal-align: center; padding-top: 80px;")
         h1 Tipo de Habitacion
         table 
          tr(style="border: 1px solid #ddd; background: rgb(170, 170, 170);")
           th Nombre
           each tipo in tipos
            tr(style="border: 1px solid #ddd; background: rgb(255, 255, 255);")
             td #{tipo.Nombre}
              a.btn.btn-info(href=`/Habit/EditTipo/${tipo.IDTipo}`) Editar
              br
              a.btn.btn-warning(href=`/Habit/ElimTipo/${tipo.IDTipo}`) Eliminar
        div(class="Container-fluid text-center justify-content-center")      
         div(class="col btn btn-link" style="Padding-bottom: 40px;")              
          a.btn.btn-success(href=`/Habit/AnadirTipo`) AÃ±adir Tipo
          br
         div(class="col btn btn-link" style="Padding-bottom: 40px;") 
          a.btn.btn-warning(href=`/Habitaciones`) Volver