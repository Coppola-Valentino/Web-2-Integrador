mixin bar()
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet")
        div(class="Container-fluid text-center" style="margin-top: 5px; border: 5px solid rgb(2, 131, 71) background: rgba(57, 255, 205, 1)")
         header(class="d-flex flex-wrap justify-content-center")
            div(class="col-4")
             img(src="/Imagenes/Icons/Icono.png", alt="Logo")
             a.btn.btn-info(href="/About" style="margin-left: 10px;") About Us
            div(class="col-2 btn btn-success")
             a.btn.btn-success(href="/Home") Sistemas Hospitalarios Sudamericanos
            if activeUser
             div(class="col btn btn-link")
              a.btn.btn-primary(href="/inPac") Pacientes
             div(class="col btn btn-link")
              a.btn.btn-primary(href="/Emergencias") Emergencias
             div(class="col btn btn-link")
              a.btn.btn-primary(href="/Habitaciones") Habitaciones
             div(class="col btn btn-link")
              a.btn.btn-primary(href="/Logout") Log Out
             if activeUser.Rol === 'Admin' || activeUser.Rol ==='Doctor' 
              div(class="col btn btn-link")
               a.btn.btn-primary(href=`/CitasMed`) Mis Citas
             if activeUser.Rol === 'Recepcionista'
              div(class="col btn btn-link")
               a.btn.btn-primary(href=`/Medics`) Medicos
             if activeUser.Rol === 'Admin'
              div(class="col btn btn-link")
               a.btn.btn-primary(href="/Users") Usuarios
            if !activeUser  
             div(class="col btn btn-link")
              a.btn.btn-primary(href="/Login") Log In