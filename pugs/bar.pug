mixin bar()
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet")
        div(class="Container-fluid text-center" style="border: 5px solid rgb(2, 131, 71) background: rgb(0, 201, 151)")
         header(class="d-flex flex-wrap justify-content-center" style="width: 100%")
           nav(class="navbar bg-dark border-bottom border-body sticky-top")
            div(class="col-4")
             img(src="/Imagenes/Icons/Icono.png", alt="Logo")
            div(class="col-2 btn btn-success")
             a.btn.btn-success(href="/") Sistemas Hospitalarios Sudamericanos
            div(class="col btn btn-link")
             a.btn.btn-primary(href="/inPac") Pacientes
            div(class="col btn btn-link")
             a.btn.btn-primary(href="/Emergencias") Emergencias
            div(class="col btn btn-link")
             a.btn.btn-primary(href="/Habitaciones") Habitaciones