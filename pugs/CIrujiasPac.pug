//lista del paciente
doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Cirujias
    body(style="background: rgb(184, 253, 219);")
        include bar.pug
        +bar()
        block content
        div(style="max-width: 1500px; margin: 0 auto; display: flex; justify-content: space-between; flex-direction: column; horizontal-align: center; padding-top: 80px;")
         h1 Historial de Cirujias de: #{pac.Nombre}
         table 
          tr(style="border: 1px solid #ddd; background: rgb(170, 170, 170);")
           th Medico
           th Fecha de la Cirujia
           th Estado 
           th Tipo
           th Acciones
           each ciru in cirus
            tr(style="border: 1px solid #ddd; background: rgb(255, 255, 255);")
             td #{ciru.med.Usuario}
             td #{ciru.Fecha}
             td #{ciru.Estado}
             td #{ciru.Tipo}
             th 
              a.btn.btn-danger(href=`/inPac/${pac.IDPaciente}/Cirujia/${ciru.IDCiru}`) Ver Detalles
        div(class="Container-fluid text-center justify-content-center")
         if activeUser.Rol === 'Medico'
          div(class="col btn btn-link" style="Padding-bottom: 40px;")              
           a.btn.btn-success(href=`/inPac/${pac.IDPaciente}/AnadirCirujia`) AÃ±adir Cirujia al Historial
           br
         div(class="col btn btn-link" style="Padding-bottom: 40px;") 
          a.btn.btn-warning(href=`/inPac/${pac.IDPaciente}/VistaMedica`) Volver