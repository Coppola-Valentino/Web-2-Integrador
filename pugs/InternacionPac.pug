//lista de internaciones del paciente seleccionado
doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Internaciones
    body(style="background: rgb(184, 253, 219);")
        include bar.pug
        +bar()
        block content
        div(style="max-width: 1500px; margin: 0 auto; display: flex; justify-content: space-between; flex-direction: column; horizontal-align: center; padding-top: 80px;")
         h1 Historial de Internaciones de: #{pac.Nombre}
         table 
          tr
           th Medico
           th Plan de Atencion
           th Fecha de Ingreso
           th Fecha de Egreso
           th Acciones
           each inter in interns
            tr
             td #{inter.med.Usuario}
             td 
              a.btn.btn-info(href=`/inPac/${pac.IDPaciente}/PlanAtencion/${inter.PlanID}`) Ver Plan
             td #{inter.FechaInicio}
             td #{inter.FechaFin}
             td 
              a.btn.btn-danger(href=`/inPac/${pac.IDPaciente}/Internaciones/${inter.IDIntern}`) Ver Detalles
         br     
         a.btn.btn-info(href=`/inPac/${pac.IDPaciente}/HistAltasPac`) Ver Altas
         br
         a.btn.btn-warning(href=`/inPac/${pac.IDPaciente}/VistaMedica`) Volver