doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Editar
    body(style="background: rgb(184, 253, 219);")
        include bar.pug
        +bar()
        block content
        div(style="max-width: 960px; margin: 0 auto; display: flex; justify-content: space-between; flex-direction: column; horizontal-align: center; padding-top: 40px;")
         h1 Editar
         form(action=`/inPac/${pac.IDPaciente}/editar` method="POST" id="formi" style="display: flex; flex-direction: column; gap: 1px;")
           label(for="Nombre") Nombre: 
           input(type="text" name="Nombre" id="Nombre" value=pac.Nombre required)
           br
           label(for="Edad") Fecha de Nacimiento: 
           input(type="date" name="Edad" id="Edad" value=pac.Edad required)
           if pac.Edad === null
            button(type="button" onclick="dehabagain()") Aun Desconocido
            script.
                 function dehabagain() {
                  const edd = document.getElementById('Edad');
                  if (edd.disabled) {
                    edd.value = null;
                    edd.disabled = false;
                  } else {
                    edd.value = null;
                    edd.disabled = true;
                  }}
           br
           label(for="DNI") DNI: 
           input(type="number" name="DNI" id="DNI" value=pac.DNI required)
           if pac.DNI === null
             button(type="button" onclick="dehab()") DNI aun desconocido
           br
           label(for="Genero") Genero: 
             select(name="Genero" required)
                 option(value="Masculino" selected=(pac.Genero === "Masculino")) Masculino
                 option(value="Femenino" selected=(pac.Genero === "Femenino")) Femenino
                 option(value="Otro" selected=(pac.Genero === "Otro")) Otro
                 if pac.Genero === "Desconocido"
                   option(value="Desconocido" selected) Desconocido
           br
           label(for="Seguro") Seguro Medico: 
              select(for="Seguro" name="Seguro" required)
                option(value="Ninguno" selected=(pac.Seguro === "Ninguno")) Ninguno
                option(value="Privado" selected=(pac.Seguro === "Privado")) Privado
                option(value="Publico" selected=(pac.Seguro === "Publico")) Publico
                if pac.Seguro === "Desconocido"
                   option(value="Desconocido" selected) Desconocido
           br
           label(for="Telefono") Numero de Telefono: 
            input(Type="number" name="Telefono" id="Telefono" value=pac.Telefono maxlength="10")
            button(type="button" onclick="dehab1()") Sin Telefono
               script.
                 function dehab1() {
                  const tel = document.getElementById('Telefono');
                  if (tel.disabled) {
                    tel.value = '0';
                    tel.disabled = false;
                  } else {
                    tel.value = '';
                    tel.disabled = true;
                  }}
           br
           label(for="Direccion") Direccion de Domicilio: 
            input(Type="text" name="Direccion" id="Direccion" value=pac.Direccion)
            button(type="button" onclick="dehab2()") Sin Direccion
                script.
                  function dehab2() {
                    const dir = document.getElementById('Direccion');
                    if (dir.disabled) {
                      dir.value = 'Desconocida';
                      dir.disabled = false;
                    } else {
                      dir.value = '';
                      dir.disabled = true;
                    }}
           br
           label(for="MadreID") Madre: 
                 select(name="MadreID" )
                  option(value=0 selected=(pac.MadreID === 0 || pac.MadreID === null || pac.MadreID === undefined)) Desconocido/Ninguno
                   for paci in pacientes
                    if paci.IDPaciente != pac.IDPaciente
                     option(value=paci.IDPaciente selected=(pac.MadreID == paci.IDPaciente)) #{paci.Nombre}
           br
           label(for="PadreID") Padre: 
                 select(name="PadreID" )
                  option(value=0 selected=(pac.PadreID === 0 || pac.PadreID === null || pac.PadreID === undefined)) Desconocido/Ninguno
                   for paci in pacientes 
                    if paci.IDPaciente != pac.IDPaciente
                     option(value=paci.IDPaciente selected=(pac.PadreID == paci.IDPaciente)) #{paci.Nombre}
           br
           label(for="Alergias") Alergias: 
           input(type="text" name="Alergias" id="Alergias" value=pac.Alergias)
           br
           button(class="btn btn-primary" type="submit") Guardar cambios
           br
           a.btn.btn-warning(href="/inPac") Cancelar
           script.
                const DNIs = !{JSON.stringify(dnis)};
                document.getElementById('formi').addEventListener('submit', function(event) {
                 const dniInp = document.getElementById('DNI');
                 const telInp = document.getElementById('Telefono');
                 const edImp = document.getElementById('Edad');
                 const Eda = new Date(edImp.value);
                 const hoy = new Date();
                 const nomImp = document.getElementById('Nombre');
                 const planImp = document.getElementById('PlanAtencion');
                 const dirImp = document.getElementById('Direccion');
                 const Aler = document.getElementById('Alergias');
                 if (!dniInp.disabled && dniInp.value && DNIs.includes(Number(dniInp.value))) {
                  alert('El DNI ya está registrado.');
                  event.preventDefault();
                 }
                 if(dniInp.value.length > 8 || dniInp.value.length < 8 && !dniImp.disabled) {
                  alert('introduzca un DNI valido');
                  dniInp.value = '';
                  event.preventDefault();
                 }
                 if (telInp.value.length > 10 && !telInp.disabled) {
                  alert('El número de teléfono no puede tener más de 10 dígitos.');
                  event.preventDefault();
                 }
                 if (telInp.value.length < 10 && !telInp.disabled ) {
                  alert('El número de teléfono debe tener 10 dígitos');
                  event.preventDefault();
                 }
                 if (Eda.getFullYear() < 1900 || Eda > hoy) {
                   alert('El año de nacimiento debe estar entre 1900 y Hoy.');
                   event.preventDefault();
                 }
                 if (nomImp.value.trim().length < 3) {
                   alert('El nombre debe tener almenos 3 letras');
                   event.preventDefault();
                 }
                 if (nomImp.value.length > 100) {
                   alert('El nombre no puede tener más de 100 caracteres.');
                   event.preventDefault();
                 }
                 if (nomImp.value.search(/\d/) !== -1 || nomImp.value.search(/[^a-zA-Z\s]/) !== -1) {
                   alert('El nombre no puede contener números o simbolos');
                   event.preventDefault();
                 }
                 if (planImp.value.length > 250) {
                   alert('El plan de atención no puede tener más de 250 caracteres.');
                   event.preventDefault();
                 }
                 if (dirImp.value.length > 250 && !dirInp.disabled) {
                   alert('La dirección no puede tener más de 250 caracteres.');
                   event.preventDefault();
                 }
                 if (Aler.value.length > 250) {
                   alert('Las Alergias no pueden tener más de 250 caracteres.');
                   event.preventDefault();
                 }
                 });
                 function dehab() {
                  const dni = document.getElementById('DNI');
                  if (dni.disabled) {
                    dni.value = '0';
                    dni.disabled = false;
                  } else {
                    dni.value = '';
                    dni.disabled = true;
                  }};