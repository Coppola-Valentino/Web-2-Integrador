//datos de la cirujia seleccionada
doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Cirujia
    body(style="background: rgb(184, 253, 219);")
        include bar.pug
        +bar()
        block content
        div(style="max-width: 1500px; margin: 0 auto; display: flex; justify-content: space-between; flex-direction: column; horizontal-align: center; padding-top: 80px;")
         h1 Detalles de la Cirujia de: #{pac.Nombre}
         p Medico: #{med.Usuario}
         p Fecha de la Cirujia: #{ciru.Fecha}
         p Estado: #{ciru.Estado}
         p Tipo: #{ciru.Tipo}
         p Diagnostico: #{ciru.Diagnostico}
         p Resumen: #{ciru.Resumen}
        a.btn.btn-warning(href=`/inPac/${pac.IDPaciente}/CirujiasPac`) Volver