//datos de la cirujia seleccionada
doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Cirujia
    body(style="background: rgb(184, 253, 219);")
        include bar.pug
        +bar()
        block content
        div(style="max-width: 1500px; border: 5px solid #000000ff; margin: 0 auto; padding-left: 10px; padding-right: 10px; display: flex; justify-content: space-between; flex-direction: column; horizontal-align: center; margin-top: 80px; background: rgba(255, 255, 255, 1)")
         h1 Detalles de la Cirujia de: #{pac.Nombre}
         p Medico: #{med.Usuario}
         p Fecha de la Cirujia: #{ciru.Fecha}
         p Estado: #{ciru.Estado}
         p Tipo: #{ciru.Tipo}
         p Diagnostico: #{ciru.Diagnostico}
         p Resumen: #{ciru.Resumen}
        div(class="Container-fluid text-center justify-content-center")      
         div(class="col btn btn-link" style="Padding-bottom: 40px;")            
          a.btn.btn-warning(href=`/inPac/${pac.IDPaciente}/CirujiasPac`) Volver