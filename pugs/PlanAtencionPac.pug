//ver planes de atencioon del paciente seleccionado, activo o no/de cualquier fecha
doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Plan de Atencion
    body(style="background: rgb(184, 253, 219);")
        include bar.pug
        +bar()
        block content
        div(style="max-width: 1500px; margin: 0 auto; display: flex; justify-content: space-between; flex-direction: column; horizontal-align: center; padding-top: 80px;")
         h1 Historial de los Planes de Atencion Medica de: #{pac.Nombre}
         table 
          tr(style="border: 1px solid #ddd; background: rgb(170, 170, 170);")
           th Medico
           th Fecha de Inicio
           th Fecha de Finalizacion
           th Tipo De Plan
           th Medicamentos Prescritos
           th Acciones
           each plan in plans
            tr(style="border: 1px solid #ddd; background: rgb(255, 255, 255);")
             td #{plan.med.Usuario}
             td #{plan.FechaInicio}
             td #{plan.FechaFin}
             td #{plan.TipoDePlan}
             td 
              a.btn.btn-info(href=`/inPac/${pac.IDPaciente}/Medicamentos/${plan.IDPlan}`) Ver Medicamentos
             td 
              a.btn.btn-danger(href=`/inPac/${pac.IDPaciente}/PlanAtencion/${plan.IDPlan}`) Ver Detalles
        div(class="Container-fluid text-center justify-content-center")      
         div(class="col btn btn-link" style="Padding-bottom: 40px;")
          a.btn.btn-warning(href=`/inPac/${pac.IDPaciente}/VistaMedica`) Volver