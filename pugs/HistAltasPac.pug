//lista de altas del paciente seleccionado
doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Altas
    body(style="background: rgb(184, 253, 219);")
        include bar.pug
        +bar()
        block content
        div(style="max-width: 1500px; margin: 0 auto; display: flex; justify-content: space-between; flex-direction: column; horizontal-align: center; padding-top: 80px;")
        h1 Historial de Altas del Paciente: #{pac.Nombre}
         table 
          tr
           th Medico
           th Fecha del Alta
           th Plan de Atencion Posterior
           each alt in alts
            tr
             td #{alt.med.Usuario}
             td #{alt.Fecha.toDateString()}
             td 
              a.btn.btn-info(href=`/inPac/${pac.ID}/PlanAtencion/${alt.PlanID}`) Ver Plan
        a.btn.btn-warning(href=`/inPac/${pac.ID}/VistaMedica`) Volver